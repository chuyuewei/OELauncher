<Window x:Class="OEL.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OEL"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Height="434.76" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="20,20,0,20" >
            <TextBlock Text="游戏版本" FontSize="16"></TextBlock>
            <ComboBox x:Name="GameVersion" Height="30"></ComboBox>
            <TextBlock Text="Java版本" FontSize="16"></TextBlock>
            <ComboBox x:Name="JavaPath" Height="30"></ComboBox>
            <TextBlock Text="游戏名称" FontSize="16"></TextBlock>
            <TextBox x:Name="PlayerName" Height="30"></TextBox>
        </StackPanel>
        <Button Content="启动游戏" FontSize="22" Click="Button_Click" Margin="20,318,630,47" Height="70" Width="150"/>
        <TextBlock x:Name="Progress" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="200" Height="30" Margin="0,0,400,67"></TextBlock>
    </Grid>
</Window>
